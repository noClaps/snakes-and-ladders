---
import { position } from "../../scripts/position";
import Board from "../../components/game/Board.astro";
import DiceValue from "../../components/game/DiceValue.astro";

export const partial = true;

const rollDice = Math.round(Math.random() * 5) + 1;
const oldPosition = position.get();
const newPosition = oldPosition + rollDice;

if (newPosition <= 99) {
    position.set(newPosition);
}
---

<DiceValue value={rollDice} />
<Board player1Position={position.get()} />
