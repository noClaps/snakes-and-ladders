---
import { Dice1, Dice2, Dice3, Dice4, Dice5, Dice6 } from "lucide-astro";

export const partial = true;

const rollDice = Math.round(Math.random() * 5) + 1;
---

<div id="dice-value" data-roll={rollDice}>
    {
        rollDice === 1 ? (
            <Dice1 />
        ) : rollDice === 2 ? (
            <Dice2 />
        ) : rollDice === 3 ? (
            <Dice3 />
        ) : rollDice === 4 ? (
            <Dice4 />
        ) : rollDice === 5 ? (
            <Dice5 />
        ) : (
            <Dice6 />
        )
    }
</div>
