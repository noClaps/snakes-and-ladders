---
import { Dice1, Dice2, Dice3, Dice4, Dice5, Dice6 } from "lucide-astro";
interface Props {
    value: number;
}

const { value } = Astro.props;
---

<div id="dice-value">
    {value === 1 && <Dice1 />}
    {value === 2 && <Dice2 />}
    {value === 3 && <Dice3 />}
    {value === 4 && <Dice4 />}
    {value === 5 && <Dice5 />}
    {value === 6 && <Dice6 />}
</div>

<style>
    svg {
        height: 2rem;
        width: 2rem;
    }
</style>
