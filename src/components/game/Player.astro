---
import { Ghost } from "lucide-astro";

interface Props {
    position: number;
}

const { position } = Astro.props;
---

<div id="player" data-position={position}>
    <Ghost />
</div>

<style is:global>
    #player {
        position: absolute;
        top: 50%;
        left: 50%;
        translate: -50% -50%;
    }
</style>
